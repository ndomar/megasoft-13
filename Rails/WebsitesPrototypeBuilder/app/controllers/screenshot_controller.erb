class ScreenShotController

  KEY = 'your key'
  SECRET = 'your secret'

  def initialize(url, bounds)
    @url = url
    @bounds = bounds
  end

  def token
    Digest::MD5.hexdigest("#{SECRET}+#{@url}")
  end

  def img_url
    "http://api.url2png.com/v3/#{KEY}/#{token}/#{@bounds}/#{@url}"
