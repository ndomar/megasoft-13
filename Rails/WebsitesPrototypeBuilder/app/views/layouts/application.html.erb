<body>
<!-- layout stuff for the home page -->
<% if designer_signed_in? %>
<!-- container for positioning the banner -->
<div id="navigation_container">
<!-- the ribbon body -->
  <div class="rectangle">
  <!-- the navigation links -->
    <ul id="navigation">
    <li><a href="#">خط عربي<div class="tabBar active" ></div></a></li>
    <li><a href="#">خط عربي<div class="tabBar" ></div></a></li>
    <li><a href="#">خط عربي<div class="tabBar"></div></a></li>
    </ul>
    <a href="#"><div width="107px" height="51px" class="logo"></div></a>
  <!-- end navigation links -->
    <div id="designer_nav" align="right">
      <!-- if he's signed in show that he's signed in else show sign in and sign out buttons -->
      <% if designer_signed_in? %>
        <% if current_designer.fullname.eql?nil %>
          <%= current_designer.email %>
        <% else %>
          <%= current_designer.fullname %>
        <% end %>
        مسجل بإسم<br /> ليس أنت؟
        <%= link_to "خروج", destroy_designer_session_path, :method => :delete %>
        <br />
        <%= link_to "تعديل البيانات", edit_designer_registration_path %>
      <% else %>
        <div class = "span2" align="right">
          <%= link_to "التسجيل", new_designer_registration_path %>
          <label class ="label label-important" >او </label>
          <%= link_to "الدخول",new_designer_session_path%>
        </div>
      <% end %>
    </div>
  </div>
<!-- end container -->
</div>
<% end %>
<br />

<!-- making a flash for any errors -->
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
 <!-- -------------------- -->

<div class="container"> <%= yield %></div>

<hr>
<footer>
