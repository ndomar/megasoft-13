<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @questionnaire.title %>
</p>

<p>
  <b>Project:</b>
  <%= @questionnaire.project %>
</p>

<ul>
	<% for qquestion in @questionnaire.qquestions %>
		<li><h4><%= qquestion.body %></h4></li>
		<li><h1><%= qquestion.qtype %></h1></li>
