      <th>نسبة النجاح</th>
      <th>عدد الضغطات</th>
    </tr>
	<tr>
	  <td><%= @task_result.reviewer.email %></td>
	  <td><%= @task_result.time %></td>
	  <td><%= @task_result.success %></td>
	  <td><%= @task_result.clicks %><td>
	</tr>
  </table> 

  
  
  
  <%= stylesheet_link_tag    "application", :media => "all" %>
<p id="notice"><%= notice %></p>


<h2 align="right">نتائج المهام</h2>

<% if @task.task_results.length !=0 %>
  <table align="right" class="table table-striped table-bordered">
    <tr>
      <th>البريد الالكتروني</th>
      <th>الوقت</th>
      <th>نسبة النجاح</th>
      <th>عدد الضغطات</th>
      <th></th>
    </tr>
    <% @task.task_results.each do |result| %>
      <%if result.reviewer %>
	<tr>
	  <td><%= result.reviewer.email %></td>
	  <td><%= result.time %></td>
	  <td><%= result.success %></td>
	  <td><%= result.clicks %><td>
	  
	</tr>
      <% end %>
    <% end %> 
  </table>
<% else %> 
  <div class="alert">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <strong>Warning!</strong> Best check yo self, you're not looking too good.
</div> 
<% end %>
