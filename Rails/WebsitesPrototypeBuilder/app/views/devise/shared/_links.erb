<%- if controller_name != 'sessions' %>
  <%= link_to "دخول", new_session_path(resource_name) %><br /> <!-- sign in -->
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "نسيت كلمة السر؟", new_password_path(resource_name) %><br /> <!-- forgot your password? -->
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "لم يصلك تعليمات تأكيد؟", new_confirmation_path(resource_name) %><br /> <!-- Didn't receive confirmation instructions? -->
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>