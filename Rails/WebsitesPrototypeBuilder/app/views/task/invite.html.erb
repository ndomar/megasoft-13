<h2> Task Invitations </h2>
<h3> Send Invitation </h3>
<p> Last Email Sent To: <%= params[:invitation_email] %> </p> 
<%= form_tag(:action => 'invite') do %>
<p> Email: </br> <%= text_field_tag(:email) %> </p>
<p> Invitation Message: </br> <%= text_field_tag :invitation_message %> </p>
<%= submit_tag("Invite") %>
<% end %>
