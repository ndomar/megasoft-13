<%= link_to 'العودة الى قائمة المهام', project_tasks_path %>
<h1>مهمة جديدة</h1>

<%= form_for :task, :url => {:action=>"create", :controller=>"tasks"}, :html => {:class => "nifty_form"} do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation" style="display:block; width:900px; float:right; margin-right:20px;">
      <h2>: عذرا لم نستطع استكمال طلبك</h2>

      <ul style="direction:rtl;">
        <% @task.errors.full_messages.each do |msg| %>
          <li style="color:red;"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div style="float:right; margin-right:20px;">
    <div class="field">
      <%= f.label "اسم المهمة" %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "الحد الأقصى للوقت" %><br />
      <%= f.text_field :time_limit %>
    </div>
    <div class="field">
      <%= f.label "هل تريد تجميع معلومات عن المراجعين" %></div>
      <%= f.check_box :requires_reviewer_info %>
    <div class="field">
      <%= f.label "وصف المهمة" %><br />
      <%= f.text_area :description %>
    </div>
    <div class="actions">
      <%= f.submit value: "مهمة جديدة" , id:'submit_button'%>
    </div>
  </div>
<% end %>
<style type="text/css">

#submit_button{
  border: 0px;
  background-color: rgb(69, 162, 224);
  color: white;
  margin-bottom: 20px;
}



</style>